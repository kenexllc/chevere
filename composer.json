{
    "name": "chevere/chevere",
    "description": "Chevere Framework",
    "homepage": "https://chevere.org",
    "type": "library",
    "license": "MIT",
    "authors": [{
        "name": "Rodolfo Berrios",
        "email": "rodolfo@chevere.org",
        "homepage": "https://chevere.org"
    }],
    "require": {
        "php": ">=7.4",
        "ext-zend-opcache": "*",
        "goaop/parser-reflection": "^2.1",
        "guzzlehttp/psr7": "^1.6",
        "jakub-onderka/php-console-color": "^0.2.0",
        "json-api-php/json-api": "^2.1",
        "monolog/monolog": "^2.0",
        "psr/simple-cache": "^1.0",
        "symfony/console": "^4.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "nunomaduro/phpinsights": "^1",
        "phpunit/phpunit": "^8",
        "symfony/var-dumper": "^5.0",
        "vimeo/psalm": "^3.8"
    },
    "autoload": {
        "files": [
            "utils/phpcheck.php",
            "resources/functions/dump.php",
            "resources/functions/writers.php",
            "resources/functions/ChevereFn/var.php"
        ],
        "psr-4": {
            "Chevere\\Components\\": "components/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chevere\\TestApp\\App\\": "Chevere/TestApp/app/src/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
